<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hanbyeol.sure_park.InputActivity"
    tools:showIn="@layout/activity_input"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reservation"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColor="#505050"
        android:textSize="24dp"
        android:id="@+id/titleview" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:id="@+id/textView2"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:id="@+id/input_phone"
            android:hint="Phone Number (Automatic)" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/input_email"
            android:hint="Email (User input)" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date/Time"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/input_date"
            android:hint="date (automatic)" />

        <Spinner
            android:layout_width="170dp"
            android:layout_height="28dp"
            android:id="@+id/input_time"
            android:prompt="@string/time"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Size"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <Spinner
            android:layout_width="280dp"
            android:layout_height="28dp"
            android:id="@+id/input_carsize"
            android:entries="@array/car_size"
            android:gravity="center_horizontal"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Number"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_card1"
            android:inputType="number"
            android:maxLength="4"
            android:hint="card" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="15pt"
            android:layout_marginLeft="10px"
            android:layout_marginRight="15px"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_card2"
            android:inputType="number"
            android:maxLength="4"
            android:hint="card" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="15pt"
            android:layout_marginLeft="10px"
            android:layout_marginRight="15px"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_card3"
            android:inputType="number"
            android:maxLength="4"
            android:hint="card" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="15pt"
            android:layout_marginLeft="10px"
            android:layout_marginRight="15px"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_card4"
            android:inputType="number"
            android:maxLength="4"
            android:hint="card" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month"
            android:textSize="16dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_month"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:maxLength="2"
            android:hint="month" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year"
            android:textSize="16dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_year"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:maxLength="2"
            android:hint="year" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CVC"
            android:textSize="16dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_cvc"
            android:layout_marginRight="20px"
            android:inputType="number"
            android:maxLength="3"
            android:hint="cvc" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_firstname"
            android:layout_marginRight="10px"
            android:inputType="textPersonName"
            android:hint="First Name"/>

        <EditText
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_lastname"
            android:layout_marginRight="20px"
            android:inputType="textPersonName"
            android:hint="Last Name" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check"
            android:id="@+id/button_cardchek" />
    </LinearLayout>

    <Button
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:text="Reserve"
        android:id="@+id/button_reserve"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
